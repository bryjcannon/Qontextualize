# Environment
NODE_ENV=development

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY=1000
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Server Configuration
PORT=3000
HOST=localhost

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Transcript Processing
TRANSCRIPT_MAX_TOKENS=10000
TRANSCRIPT_OVERLAP_TOKENS=200
TRANSCRIPT_MIN_CHUNK_LENGTH=100
TRANSCRIPT_MAX_CHUNKS=50
TRANSCRIPT_MIN_SENTENCE_LENGTH=10

# Claims Processing
MIN_CLAIM_LENGTH=5
MAX_CLAIMS_PER_CHUNK=10
SIMILARITY_THRESHOLD=0.85
MAX_SOURCES_PER_CLAIM=3
MAX_EVIDENCE_POINTS=5
RECENT_SOURCE_YEARS=3
